<div class="py-3">
    <div class="d-flex pb-4">
        <div class="ms-auto">
            <a class="btn btn-primary p-2" href="@Url.Action("Create", "Categoria")">Crear Categoría</a>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <table class="table table-sm w-50">
            <thead>
                <tr>
                    <th class="w-75"><strong>Categoría</strong></th>
                    <th class="text-center"><strong>Productos Asociados</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.Nombre</td>
                        <td class="text-center">@(categoria.Productos != null ? categoria.Productos.Count : 0)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

